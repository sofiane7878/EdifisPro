<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}BTP Manager{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/competences.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navbar - Pleine largeur -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm w-100">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <i class="fas fa-hard-hat me-2"></i>BTP Manager
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    {% if is_granted('ROLE_ADMIN') %}
                        <!-- Navigation pour les administrateurs -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_equipe_index') }}">
                                <i class="fas fa-users me-1"></i>Équipes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_chantier_index') }}">
                                <i class="fas fa-hard-hat me-1"></i>Chantiers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_affectation_index') }}">
                                <i class="fas fa-tasks me-1"></i>Affectations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_ouvrier_index') }}">
                                <i class="fas fa-user-cog me-1"></i>Ouvriers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_competence_index') }}">
                                <i class="fas fa-tools me-1"></i>Compétences
                            </a>
                        </li>
                    {% elseif is_granted('ROLE_OUVRIER') %}
                        <!-- Navigation pour les ouvriers -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_ouvrier_dashboard') }}">
                                <i class="fas fa-tachometer-alt me-1"></i>Tableau de bord
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_ouvrier_mes_chantiers') }}">
                                <i class="fas fa-hard-hat me-1"></i>Mes Chantiers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_ouvrier_profil') }}">
                                <i class="fas fa-user me-1"></i>Mon Profil
                            </a>
                        </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>{{ app.user.email }}
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                </a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <i class="fas fa-sign-in-alt me-1"></i>Connexion
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Messages Flash - Conteneur centré -->
    <div class="container mt-3">
        {% for label, messages in app.flashes %}
            {% set alertClass = 'alert-' ~ (label == 'error' ? 'danger' : label) %}
            <div class="alert {{ alertClass }} alert-dismissible fade show" role="alert">
                {% for message in messages %}
                    <p class="mb-0">{{ message }}</p>
                {% endfor %}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    </div>

    <!-- Contenu principal - Conteneur centré -->
    <main class="py-4">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer - Pleine largeur -->
    <footer class="bg-dark text-light py-4 w-100 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-hard-hat me-2"></i>BTP Manager</h5>
                    <p class="mb-0">Gestion des équipes et chantiers</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2024 BTP Manager. Tous droits réservés.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}{% endblock %}

</body>
</html>
