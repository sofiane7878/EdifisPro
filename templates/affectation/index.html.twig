{% extends 'base.html.twig' %}

{% block title %}Gestion des Affectations - BTP Manager{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-tasks me-2"></i>Gestion des Affectations</h1>
    </div>

    <!-- Section Chantiers disponibles -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-hard-hat me-2"></i>Chantiers disponibles pour affectation
            </h4>
        </div>
        <div class="card-body">
            {% set chantiers_disponibles = [] %}
            {% for chantier in chantiers %}
                {% if chantier.getEffectifRestant() > 0 %}
                    {% set chantiers_disponibles = chantiers_disponibles|merge([chantier]) %}
                {% endif %}
            {% endfor %}
            
            {% if chantiers_disponibles|length > 0 %}
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    {% for chantier in chantiers_disponibles %}
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                {% if chantier.image %}
                                    <img src="{{ asset('uploads/images/' ~ chantier.image) }}" 
                                         class="card-img-top object-fit-cover" 
                                         style="height: 200px;" 
                                         alt="Image du chantier {{ chantier.nom }}">
                                {% else %}
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                {% endif %}
                                
                                <div class="card-body">
                                    <h5 class="card-title text-primary">{{ chantier.nom }}</h5>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">
                                            <i class="fas fa-users me-2"></i>Effectifs
                                        </h6>
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Requis</small>
                                                <div class="fw-bold text-primary">{{ chantier.effectifRequis }}</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Restant</small>
                                                <div class="fw-bold text-warning">
                                                    {{ chantier.getEffectifRestant() }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">
                                            <i class="fas fa-calendar me-2"></i>Dates
                                        </h6>
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Début</small>
                                                <div class="fw-bold">{{ chantier.dateDebut ? chantier.dateDebut|date('d/m/Y') : '-' }}</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Fin</small>
                                                <div class="fw-bold">{{ chantier.dateFin ? chantier.dateFin|date('d/m/Y') : '-' }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-transparent">
                                    <a href="{{ path('app_affectation_new', {'id': chantier.id}) }}" class="btn btn-primary w-100">
                                        <i class="fas fa-user-plus me-2"></i>Affecter une équipe
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h5 class="text-success">Tous les chantiers sont complets !</h5>
                    <p class="text-muted">Tous les chantiers ont atteint leur effectif requis</p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Section Affectations existantes -->
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">
                <i class="fas fa-tasks me-2"></i>Affectations en cours
            </h4>
        </div>
        <div class="card-body">
            {% if affectations|length > 0 %}
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    {% for affectation in affectations %}
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                {% if affectation.chantier.image %}
                                    <img src="{{ asset('uploads/images/' ~ affectation.chantier.image) }}" 
                                         class="card-img-top object-fit-cover" 
                                         style="height: 200px;" 
                                         alt="Image du chantier {{ affectation.chantier.nom }}">
                                {% else %}
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                {% endif %}
                                
                                <div class="card-body">
                                    <h5 class="card-title text-success">{{ affectation.nom }}</h5>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">
                                            <i class="fas fa-users me-2"></i>Équipe
                                        </h6>
                                        <div class="fw-bold">{{ affectation.equipe.nomEquipe }}</div>
                                        <small class="text-muted">{{ affectation.equipe.nombre }} membres</small>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">
                                            <i class="fas fa-hard-hat me-2"></i>Chantier
                                        </h6>
                                        <div class="fw-bold">{{ affectation.chantier.nom }}</div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">
                                            <i class="fas fa-calendar me-2"></i>Période
                                        </h6>
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Début</small>
                                                <div class="fw-bold">{{ affectation.dateDebut ? affectation.dateDebut|date('d/m/Y') : '-' }}</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Fin</small>
                                                <div class="fw-bold">{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : '-' }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <a href="{{ path('app_affectation_show', {'id': affectation.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye me-1"></i>Voir
                                        </a>
                                        <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i>Modifier
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucune affectation trouvée</h5>
                    <p class="text-muted">Affectez des équipes aux chantiers pour commencer</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}