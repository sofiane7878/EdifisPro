{% extends 'base.html.twig' %}
{% import 'macros/competences.html.twig' as competence_macros %}

{% block title %}Mon Profil - {{ ouvrier.nomOuvrier }}{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user me-2"></i>Mon Profil</h1>
        <a href="{{ path('app_ouvrier_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Retour au tableau de bord
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-circle me-2"></i>Informations Personnelles
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nom complet:</label>
                                <p class="form-control-plaintext">{{ ouvrier.nomOuvrier }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Rôle:</label>
                                <p class="form-control-plaintext">{{ ouvrier.role }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email de connexion:</label>
                                <p class="form-control-plaintext">{{ app.user.email }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Équipe:</label>
                                <p class="form-control-plaintext">
                                    {% if ouvrier.equipe %}
                                        <span class="badge bg-success">{{ ouvrier.equipe.nomEquipe }}</span>
                                    {% else %}
                                        <span class="text-muted">Aucune équipe assignée</span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>

                    {% if ouvrier.competences|length > 0 %}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mes Compétences:</label>
                            <div class="mt-2">
                                {{ competence_macros.competence_list(ouvrier.competences) }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Statistiques
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-user fa-2x"></i>
                        </div>
                    </div>

                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">{{ ouvrier.competences|length }}</h4>
                            <small class="text-muted">Compétences</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">
                                {{ affectations|length }}
                            </h4>
                            <small class="text-muted">Affectations</small>
                        </div>
                    </div>

                    <hr>

                    <div class="text-center">
                        <h6 class="text-muted">Statut du compte</h6>
                        <span class="badge bg-success">Actif</span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informations
                    </h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Ce profil affiche vos informations personnelles et vos compétences.
                    </p>
                    <p class="small text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Seuls les administrateurs peuvent modifier ces informations.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 