{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - {{ ouvrier.nomOuvrier }}{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-cog me-2"></i>Tableau de Bord</h1>
        <div class="text-end">
            <p class="mb-0">Bienvenue, <strong>{{ ouvrier.nomOuvrier }}</strong></p>
            <small class="text-muted">{{ ouvrier.role }}</small>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">{{ affectations|length }}</h5>
                    <p class="card-text">Affectations actives</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">{{ ouvrier.competences|length }}</h5>
                    <p class="card-text">Compétences</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        {% if ouvrier.equipe %}
                            {{ ouvrier.equipe.nomEquipe }}
                        {% else %}
                            Aucune
                        {% endif %}
                    </h5>
                    <p class="card-text">Équipe</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Mes chantiers actifs -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-hard-hat me-2"></i>Mes Chantiers Actifs
            </h5>
        </div>
        <div class="card-body">
            {% if affectations|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Chantier</th>
                                <th>Équipe</th>
                                <th>Période</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for affectation in affectations %}
                                <tr>
                                    <td>
                                        <strong>{{ affectation.chantier.nom }}</strong>
                                    </td>
                                    <td>
                                        {% if affectation.equipe %}
                                            {{ affectation.equipe.nomEquipe }}
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ affectation.dateDebut|date('d/m/Y') }} - {{ affectation.dateFin|date('d/m/Y') }}
                                    </td>
                                    <td>
                                        {% set today = "now"|date('Y-m-d') %}
                                        {% if affectation.dateFin|date('Y-m-d') < today %}
                                            <span class="badge bg-secondary">Terminé</span>
                                        {% elseif affectation.dateDebut|date('Y-m-d') <= today and affectation.dateFin|date('Y-m-d') >= today %}
                                            <span class="badge bg-success">En cours</span>
                                        {% else %}
                                            <span class="badge bg-warning">À venir</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_ouvrier_mes_chantiers') }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-hard-hat fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucun chantier assigné</h5>
                    <p class="text-muted">Vous n'avez pas encore d'affectation active.</p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Navigation rapide -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-hard-hat fa-2x text-primary mb-3"></i>
                    <h5>Mes Chantiers</h5>
                    <p class="text-muted">Voir tous mes chantiers assignés</p>
                    <a href="{{ path('app_ouvrier_mes_chantiers') }}" class="btn btn-primary">
                        Voir mes chantiers
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-user fa-2x text-success mb-3"></i>
                    <h5>Mon Profil</h5>
                    <p class="text-muted">Gérer mes informations personnelles</p>
                    <a href="{{ path('app_ouvrier_profil') }}" class="btn btn-success">
                        Voir mon profil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 