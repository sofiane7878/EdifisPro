{% extends 'base.html.twig' %}

{% block title %}Test Compétences - BTP Manager{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Test des Compétences</h1>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Liste des compétences</h3>
            <ul class="list-group">
                {% for competence in competences %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ competence.nom }}
                        <span class="badge bg-primary rounded-pill">{{ competence.categorie }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
        
        <div class="col-md-6">
            <h3>Statistiques</h3>
            <div class="card">
                <div class="card-body">
                    <p><strong>Total compétences :</strong> {{ competences|length }}</p>
                    <p><strong>Par catégorie :</strong></p>
                    <ul>
                        {% for categorie, count in categories %}
                            <li>{{ categorie }}: {{ count }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 