{% extends 'base.html.twig' %}
{% import 'macros/competences.html.twig' as competence_macros %}

{% block title %}Liste des Ouvriers - BTP Manager{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-cog me-2"></i>Liste des Ouvriers</h1>
        <a href="{{ path('app_ouvrier_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Créer un Nouvel Ouvrier
        </a>
    </div>

    <!-- Barre de recherche -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="search" class="form-control" placeholder="Rechercher un ouvrier...">
            </div>
        </div>
    </div>

    {% if ouvriers|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for ouvrier in ouvriers %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user me-2"></i>{{ ouvrier.nomOuvrier }}
                            </h5>
                        </div>
                        
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-briefcase me-2"></i>Rôle
                                </h6>
                                <div class="fw-bold">{{ ouvrier.role }}</div>
                            </div>
                            
                            <div class="mb-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-tools me-2"></i>Compétences
                                </h6>
                                {{ competence_macros.competence_list(ouvrier.competences) }}
                            </div>
                            
                            <div class="mb-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-users me-2"></i>Équipe
                                </h6>
                                <div class="fw-bold">
                                    {% if ouvrier.equipe %}
                                        {{ ouvrier.equipe.nomEquipe }}
                                    {% else %}
                                        <span class="text-muted">Aucune équipe</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-user-circle me-2"></i>Compte utilisateur
                                </h6>
                                <div class="fw-bold">
                                    {% if ouvrier.user %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>{{ ouvrier.user.email }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Aucun compte
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_ouvrier_show', {'id': ouvrier.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye me-1"></i>Voir
                                </a>
                                <a href="{{ path('app_ouvrier_edit', {'id': ouvrier.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit me-1"></i>Modifier
                                </a>
                                <form method="post" action="{{ path('app_ouvrier_delete', {'id': ouvrier.id}) }}" style="display: inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Voulez-vous vraiment supprimer cet ouvrier ?')">
                                        <i class="fas fa-trash me-1"></i>Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="fas fa-user-cog fa-3x text-muted mb-3"></i>
            <h3 class="text-muted">Aucun ouvrier trouvé</h3>
            <p class="text-muted">Commencez par créer votre premier ouvrier</p>
            <a href="{{ path('app_ouvrier_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Créer un ouvrier
            </a>
        </div>
    {% endif %}
</div>

<script>
document.getElementById('search').addEventListener('keyup', function() {
    const searchTerm = this.value.toLowerCase();
    const cards = document.querySelectorAll('.card');
    
    cards.forEach(card => {
        const title = card.querySelector('.card-title').textContent.toLowerCase();
        if (title.includes(searchTerm)) {
            card.closest('.col').style.display = '';
        } else {
            card.closest('.col').style.display = 'none';
        }
    });
});
</script>
{% endblock %}
